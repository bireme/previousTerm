<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>PreviousTermServlet</servlet-name>
        <servlet-class>br.bireme.prvtrm.PreviousTermServlet</servlet-class>
        <init-param>
            <description>List of Lucene indexes</description>
            <param-name>LUCENE_INDEXES</param-name>
            <param-value>
                <!--[name="<index name>" path="<index path>" fields="<fieldName1,fieldName2,..."]-->
                [name="lil" path="/home/heitor/Projetos/DocumentSimilarity/lil" fields="tit,abs"]
                [name="sms" path="/home/heitor/tmp/index/" fields="la,tag_sessp,db"]
            </param-value>
        </init-param>
        <init-param>
            <description>maximum number of terms to be returned</description>
            <param-name>MAX_TERMS</param-name>
            <param-value>10</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>PreviousTermServlet</servlet-name>
        <url-pattern>/PreviousTermServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
